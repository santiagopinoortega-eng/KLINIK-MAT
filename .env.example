# Example env file (no secrets)
# Copy to `.env.local` and fill with real credentials for local development.

# Primary database (production-like)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?pgbouncer=true"

# Development database (optional)
DATABASE_URL_DEV="postgresql://USER:PASSWORD@HOST:PORT/DATABASE_DEV"

# Clerk Authentication (get from https://dashboard.clerk.com)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_xxxxx"
CLERK_SECRET_KEY="sk_test_xxxxx"

# Clerk Webhooks (for syncing users to Prisma)
CLERK_WEBHOOK_SECRET="whsec_xxxxx"

# Clerk URLs (customize if needed)
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/login"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/login"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/casos"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/casos"

# Site URL
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Sentry Error Monitoring (get from https://sentry.io)
# Optional - if not set, errors only log to console
NEXT_PUBLIC_SENTRY_DSN="https://xxxxx@xxxxx.ingest.sentry.io/xxxxx"
SENTRY_ORG="your-org-name"
SENTRY_PROJECT="klinik-mat"
SENTRY_AUTH_TOKEN="xxxxx" # Only needed for CI/CD source maps upload
