# Example env file (no secrets)
# Copy to `.env.local` and fill with real credentials for local development.

# Primary database (production-like)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?pgbouncer=true"

# Development database (optional)
DATABASE_URL_DEV="postgresql://USER:PASSWORD@HOST:PORT/DATABASE_DEV"

NEXTAUTH_SECRET="cambia_esto_por_un_secreto_largo_y_random"
NEXTAUTH_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Email settings (dev example: MailHog)
EMAIL_SERVER_HOST=localhost
EMAIL_SERVER_PORT=1025
EMAIL_SERVER_USER=
EMAIL_SERVER_PASSWORD=
EMAIL_FROM="no-reply@example.com"

# Development flags
ENABLE_NEXTAUTH_DEV=true
NEXTAUTH_DEV_KEY="dev_key_change_me"
