generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id // Clerk userId (no auto-generated)
  email         String          @unique
  emailVerified DateTime?       @map("email_verified")
  name          String?
  role          Role            @default(STUDENT)
  createdAt     DateTime        @default(now()) @map("created_at")
  updatedAt     DateTime        @updatedAt @map("updated_at")
  results       StudentResult[]

  @@map("users")
}

model Case {
  id         String       @id @default(cuid())
  title      String
  area       String       // Legacy: mantener para compatibilidad
  modulo     String?      // Nuevo: Anticoncepción, ITS, Consejería, Climaterio
  difficulty Int          // Legacy: 1, 2, 3
  dificultad String?      // Nuevo: "Baja", "Media", "Alta"
  summary    String?
  isPublic   Boolean      @default(false)
  vignette   String?
  feedbackDinamico Json?  @map("feedback_dinamico") // { bajo, medio, alto }
  createdAt  DateTime     @default(now()) @map("created_at")
  updatedAt  DateTime     @updatedAt @map("updated_at")
  questions  Question[]   @relation("CaseQuestions")
  norms      MinsalNorm[] @relation("CaseNorms")
  images     CaseImage[]  @relation("CaseImages")

  @@map("cases")
}

model Question {
  id      String          @id @default(cuid())
  order   Int
  text    String
  guia    String?
  feedbackDocente String?
  caseId  String
  options Option[]        @relation("QuestionOptions")
  images  QuestionImage[] @relation("QuestionImages")
  case    Case            @relation("CaseQuestions", fields: [caseId], references: [id])

  @@map("questions")
}

model Option {
  id         String   @id @default(cuid())
  text       String
  isCorrect  Boolean  @default(false)
  feedback   String?
  questionId String
  question   Question @relation("QuestionOptions", fields: [questionId], references: [id])

  @@map("options")
}

model MinsalNorm {
  id    String @id @default(cuid())
  name  String
  code  String @unique
  cases Case[] @relation("CaseNorms")

  @@map("minsal_norms")
}

model StudentResult {
  id          String   @id @default(cuid())
  userId      String
  caseId      String
  caseTitle   String?  // Título del caso para fácil referencia
  caseArea    String?  // Área clínica (ginecologia, ssr, etc.)
  score       Int      // Puntos obtenidos (0-100)
  totalPoints Int      @default(100) // Puntos totales posibles
  mode        String?  @default("study") // 'study', 'osce'
  timeLimit   Int?     // Tiempo límite en segundos (null = sin límite)
  timeSpent   Int?     // Tiempo real usado en segundos
  answers     Json?    // Respuestas del estudiante (array de objetos)
  completedAt DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, completedAt(sort: Desc)])
  @@index([caseArea])
  @@map("student_results")
}

// Tabla para imágenes asociadas a casos (vigneta)
model CaseImage {
  id          String   @id @default(cuid())
  caseId      String
  url         String   // Ruta relativa o absoluta a la imagen
  alt         String   // Texto alternativo para accesibilidad
  caption     String?  // Leyenda opcional
  order       Int      @default(0) // Orden de aparición si hay múltiples imágenes
  createdAt   DateTime @default(now()) @map("created_at")
  case        Case     @relation("CaseImages", fields: [caseId], references: [id], onDelete: Cascade)

  @@map("case_images")
}

// Tabla para imágenes asociadas a preguntas específicas
model QuestionImage {
  id          String   @id @default(cuid())
  questionId  String
  url         String   // Ruta relativa o absoluta a la imagen
  alt         String   // Texto alternativo para accesibilidad
  caption     String?  // Leyenda opcional
  order       Int      @default(0) // Orden de aparición si hay múltiples imágenes
  createdAt   DateTime @default(now()) @map("created_at")
  question    Question @relation("QuestionImages", fields: [questionId], references: [id], onDelete: Cascade)

  @@map("question_images")
}

enum Role {
  STUDENT
  EDITOR
  ADMIN
}
